<h1>Carts#show</h1>
<p>Find me in app/views/carts/show.html.erb</p>


<% @cart_items.each do |item| %>

    <h3><%= item.product.title %></h3>
    <h3><%= item.product.price %></h3>

    <%= form_for item do |f| %>

        <%= f.hidden_field :product_id, :value => item.product.id %>
        <%= f.number_field :quantity, :value => item.quantity.to_i %>
        <%= f.submit "Update Cart" %>


        <%= link_to "Remove Item", cart_item_path(item), method: :delete, remote: true %>


    <% end %>
        <h2>Subtotal: <%= item.total %></h2>


<% end %>

<h3>Your current cart value has a Subtotal of <%= current_cart.subtotal %></h3>